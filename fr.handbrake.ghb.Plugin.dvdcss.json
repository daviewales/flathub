{
    "app-id": "fr.handbrake.ghb.Plugin.dvdcss",
    "branch": "1",
    "runtime": "fr.handbrake.ghb",
    "runtime-version": "stable",
    "sdk": "org.gnome.Sdk//46",
    "build-extension": true,
    "separate-locales": false,
    "build-options": {
        "prefix": "/app/extensions/dvdcss"
    },
    "modules": [
            {
                "name": "metadata",
                "buildsystem": "simple",
                "build-commands": [
                    "install -Dp -m 644 fr.handbrake.ghb.Plugin.dvdcss.metainfo.xml --target-directory=/app/extensions/dvdcss/share/metainfo"
                ],
                "sources": [
                    {
                        "type": "file",
                        "path": "fr.handbrake.ghb.Plugin.dvdcss.metainfo.xml"
                    }
                ]
            },
            "libdvdcss.json"
    ]
}

